.navbar-command {
    min-height: 45px;
    padding: 0;
    margin-bottom: 10px;

    .input-group {
        width: auto;

        .btn-command {
            width: 40px;
            height: 37px;
            padding-left: 3px;
            padding-right: 3px;

            span {
                display: none;
            }

            &[disabled] {
                background-color: #eceeef;
                border-color: darken(#eceeef, 5);
                color: darken(#eceeef, 5);

                &:hover {
                    background-color: #eceeef;
                    border-color: darken(#eceeef, 5);
                    color: darken(#eceeef, 5);
                }
            }
        }
    }    
}

@media screen and (min-width: 480px) {
    .navbar-command {
        .input-group {
            .btn-command {
                width: 100px;

                span {
                    display: initial;
                }
            }
        }
    }
}